source "https://rubygems.org"

ruby "<%= Yastart::RUBY_VERSION %>"

gem "rails", "<%= Yastart::RAILS_VERSION %>"

gem 'pg'
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
gem 'turbolinks', '~> 3.0.0', github: 'rails/turbolinks'
gem 'jbuilder', '~> 2.0'
# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 0.4.0', group: :doc
gem 'sqlite3'
gem "simple_form", "~> 3.1.0"
gem "nested_form"
gem "rails_bootstrap_helper", "~> 1.0.1", github: "olimart/rails_bootstrap_helper", branch: "bs3.1"
gem "tabs_on_rails", "~> 2.1.1"
gem "thin"
gem "figaro", "~> 1.1.0", github: "laserlemon/figaro"
gem "six"
gem 'sorcery', '~> 0.9.0'

group :development, :test do
  gem "ffaker"
  gem "hirb"
end

group :development do
  gem "rack-mini-profiler"
  gem "letter_opener"
  gem "better_errors"
  gem "quiet_assets"
  gem "spring"
  gem "web-console", "~> 2.0"
end

group :test do
  gem "minitest-reporters"
end

group :production do
  gem "exception_notification", "~> 4.0.0"
  gem "unicorn"
  gem "rails_12factor"
end
